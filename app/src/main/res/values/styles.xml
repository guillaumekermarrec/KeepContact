<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.ActionBarTheme" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Theme.ActionBarTheme.ActionBar</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.ActionBarThemeMenu" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Theme.ActionBarTheme.ActionBar</item>
    </style>

    <style name="Theme.Dialog" parent="android:style/Theme.Holo.Light.Dialog">
    </style>

    <style name="Theme.ActionBarTheme.ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#ED8D07</item>
        <item name="android:titleTextStyle">@style/Theme.ActionBarTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.ActionBarTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>